<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Predict Text at the top -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Predict"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp"
        android:textStyle="bold" />

    <!-- Button that looks like an image below the text -->
    <ImageView
        android:id="@+id/predict_button"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        android:src="@drawable/predict" />

    <!-- Text for Last Viewed section -->
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Viewed"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="22dp"
        android:textStyle="bold" />

    <!-- Container for the last viewed elements -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Image for the Last Viewed item -->
        <ImageView
            android:id="@+id/last_viewed_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/home" />

        <!-- Title for the Last Viewed item -->
        <TextView
            android:id="@+id/last_viewed_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Image Title" />

        <!-- Description for the Last Viewed item -->
        <TextView
            android:id="@+id/last_viewed_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="Image description" />
    </LinearLayout>
</LinearLayout>